<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Lessons.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <BoxView 
            Grid.Row="1"
            Grid.Column="1"
            Color="#3B3B3B"
            CornerRadius="15"/>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            x:Name="Hours1"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            FontSize="220"
            FontAttributes="Bold"
            TextColor="#F5FDFF"/>

        <BoxView 
            Grid.Row="1"
            Grid.Column="3"
            Color="#3B3B3B"
            CornerRadius="15"/>
        <Label
            Grid.Row="1"
            Grid.Column="3"
            x:Name="Hours2"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            FontSize="220"
            FontAttributes="Bold"
            TextColor="#F5FDFF"/>

        <BoxView 
            Grid.Row="1"
            Grid.Column="5"
            Color="#3B3B3B"
            CornerRadius="15"/>
        <Label
            Grid.Row="1"
            Grid.Column="5"
            x:Name="Minutes1"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            FontSize="220"
            FontAttributes="Bold"
            TextColor="#F5FDFF"/>

        <BoxView 
            Grid.Row="1"
            Grid.Column="7"
            Color="#3B3B3B"
            CornerRadius="15"/>
        <Label
            Grid.Row="1"
            Grid.Column="7"
            x:Name="Minutes2"
            Text="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            FontSize="220"
            FontAttributes="Bold"
            TextColor="#F5FDFF"/>
    </Grid>

</ContentPage>